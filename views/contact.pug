extends base.pug
block scripts 
    script(src="/JS/index.js") 
block style 
    style   
        include ../public/CSS/bootstrap.min.css
        include ../public/CSS/style.css
block content
    h1.text-center  #[ Welcome - ] #{message}
    
    div.container.border.text-center.bg-success
        form(action="/contact", method="post",class="my-form text-center row   justify-content-center  ")
            input(type="text" name="name",id="name",class="fom-control p-2 text-lead  rounded-2 border border-1 outline-none m-3 w-75" placeholder="enter the name") 
            input(type="text" name="phone",id="phone",class="fom-control p-2   rounded-2 border border-1 outline-none  m-3 w-75" placeholder="enter the phone number") 
            input(type="email" name="email",id="email",class="fom-control p-2   rounded-2 border border-1 outline-none  m-3 w-75" placeholder="ente the email here ") 
            input(type="password" name="password",id="password",class="fom-control p-2   rounded-2 border border-1 outline-none  m-3 w-75" placeholder="ente strong password ") 
            input(type="text" name="address",id="address",class="fom-control p-2   rounded-2 border border-1 outline-none  m-3 w-75" placeholder="enter the address ") 
            input(type="text" name="desc",id="desc",class="fom-control p-2   rounded-2 border border-1 outline-none  m-3 w-75" placeholder='your description') 
            button(type="submit" class=" btn btn-outline-warning text-white w-50 m-3 fw-bold") submit 
